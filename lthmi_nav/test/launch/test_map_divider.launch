<?xml version="1.0"?>
<launch>

    <node pkg="lthmi_nav" type="test_map_divider.py" name="test_map_divider" output="screen" required="true">
        <param name="map" value="$(find lthmi_nav)/map/arena2.map" />
        <param name="resolution" value="0.1" />
    </node>

    <node pkg="lthmi_nav" name="map_divider" type="map_divider"  output="screen">
        <param name="method" value="htile" />
        <rosparam>
            probs_optimal: [0.25, 0.25, 0.25, 0.25]
        </rosparam>
    </node>
    
    <node name="rviz" pkg="rviz" type="rviz"  output="screen" 
            args="-d $(find lthmi_nav)/test/rviz/test_map_divider.rviz" >
    </node>
    
</launch>
